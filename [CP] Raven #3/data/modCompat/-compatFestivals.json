//====================================================================================================================================
// PELICAN TOWN POTLUCK
//====================================================================================================================================

// Pelican Town Potluck changes the Luau to a Potluck, so you may want a variant of dialogue.
{		
    "LogName": "Raven: festivals.json - Luau->Potluck compat - dialogue",
    "Action": "EditData",
    "Target": "Data/Festivals/summer11",
    "Entries": {
        "{{ModId}}": "",
    },
    "When": {
        "HasMod: |contains={{PTP}}": true,
    },
},

//====================================================================================================================================
// FERNGILL FASHION FESTIVAL
//====================================================================================================================================

// Ferngill Fashion Festival - Added by https://www.nexusmods.com/stardewvalley/mods/17404 	
{	
    "LogName": "Raven: festivals.json - Ferngill Fashion Festival",
    "Action": "EditData",
    "Target": "Data/Festivals/spring19",
    "TextOperations": [//SetUp
        {
            "Operation": "Append",
            "Target": ["Entries", "Set-Up_additionalCharacters"],
            "Value": "{{ModId}} 35 31 up",
            "Delimiter": "/"
        },
    ],
    "When": {
        "HasMod: |contains={{FFF}}": true,
    },
},
{	
    "LogName": "Raven: festivals.json - Ferngill Fashion Festival - Dialogue",
    "Action": "EditData",
    "Target": "Data/Festivals/spring19",
    "Entries": {
        "{{ModId}}": "",
    },
    "When": {
        "HasMod: |contains={{FFF}}": true,
    },
},

